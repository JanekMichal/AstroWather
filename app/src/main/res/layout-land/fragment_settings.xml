<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    tools:context=".ui.home.SettingsFragment">


    <TextView
        android:id="@+id/text_settings"
        style="@style/light_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_co_ordinates"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/edit_text_latitude"
        style="@style/light_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_settings"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:hint="@string/latitude"

        android:textColorHint="@color/almost_white" />

    <EditText
        android:id="@+id/edit_text_altitude"
        style="@style/light_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_latitude"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:hint="@string/altitude"
        android:textColorHint="@color/almost_white" />

    <Spinner
        android:id="@+id/time_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_settings"
        android:layout_toEndOf="@+id/edit_text_latitude"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/button_confirm_settings"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="200dp"

        android:layout_marginTop="250dp"
        android:backgroundTint="@color/dark_blue"
        android:onClick="buttonConfirmSettingsClick"
        android:text="@string/confirm" />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="250dp"

        android:layout_toEndOf="@+id/button_confirm_settings"
        android:backgroundTint="@color/dark_blue"
        android:onClick="useDefaultCoordinates"
        android:text="@string/use_default" />


</RelativeLayout>